# Plugin Configuration Management
# Environment variables for all Helm AI plugins

# Core API Configuration
API_PORT=5001
API_HOST=localhost
API_DEBUG=false
API_ENVIRONMENT=production

# Database Configuration
DATABASE_URL=postgresql://helm_user:helm_password@localhost:5432/helm_ai
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=helm_ai
DATABASE_USER=helm_user
DATABASE_PASSWORD=helm_password

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Plugin Port Configuration
HEALTHCARE_PLUGIN_PORT=5002
GOVERNMENT_DEFENSE_PLUGIN_PORT=5005
AUTOMOTIVE_TRANSPORTATION_PLUGIN_PORT=5006
REAL_ESTATE_PLUGIN_PORT=5007
FINANCIAL_PLUGIN_PORT=5008
MANUFACTURING_PLUGIN_PORT=5009
EDUCATION_PLUGIN_PORT=5010
ECOMMERCE_PLUGIN_PORT=5011
MEDIA_ENTERTAINMENT_PLUGIN_PORT=5012
PHARMACEUTICAL_PLUGIN_PORT=5013
ENTERPRISE_PLUGIN_PORT=5014
GAMING_PLUGIN_PORT=5015

# Plugin Configuration
HEALTHCARE_PLUGIN_ENABLED=true
GOVERNMENT_DEFENSE_PLUGIN_ENABLED=true
AUTOMOTIVE_TRANSPORTATION_PLUGIN_ENABLED=true
REAL_ESTATE_PLUGIN_ENABLED=true
FINANCIAL_PLUGIN_ENABLED=true
MANUFACTURING_PLUGIN_ENABLED=true
EDUCATION_PLUGIN_ENABLED=true
ECOMMERCE_PLUGIN_ENABLED=true
MEDIA_ENTERTAINMENT_PLUGIN_ENABLED=true
PHARMACEUTICAL_PLUGIN_ENABLED=true
ENTERPRISE_PLUGIN_ENABLED=true
GAMING_PLUGIN_ENABLED=true

# Security Configuration
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here
ENCRYPTION_KEY=your-encryption-key-here

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/helm_ai.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# Rate Limiting
ENABLE_RATE_LIMITING=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# API Configuration
API_VERSION=v1
API_PREFIX=/api
API_DOCS_ENABLED=true
API_CORS_ENABLED=true

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30
ENABLE_HEALTH_CHECKS=true

# Security Headers
ENABLE_SECURITY_HEADERS=true
ENABLE_INPUT_VALIDATION=true
ENABLE_REQUEST_LOGGING=true

# External Services
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET=helm-ai-storage

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-email-password
SMTP_USE_TLS=true

# Notification Configuration
SLACK_BOT_TOKEN=your-slack-bot-token
SLACK_SIGNING_SECRET=your-slack-signing-secret
MAILCHIMP_API_KEY=your-mailchimp-api-key
MAILCHIMP_LIST_ID=your-mailchimp-list-id

# Development Configuration
DEVELOPMENT_MODE=false
DEBUG=false
TESTING=false
MOCK_EXTERNAL_SERVICES=false

# Performance Configuration
MAX_WORKERS=4
WORKER_TIMEOUT=30
KEEP_ALIVE=2
MAX_CONNECTIONS=1000

# Cache Configuration
CACHE_TYPE=redis
CACHE_DEFAULT_TIMEOUT=300
CACHE_KEY_PREFIX=helm_ai

# Session Configuration
SESSION_TYPE=redis
SESSION_PERMANENT=false
SESSION_USE_SIGNER=true
SESSION_KEY_PREFIX=helm_ai_session

# File Upload Configuration
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216
ALLOWED_EXTENSIONS=txt,pdf,png,jpg,jpeg,gif,doc,docx

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE=local
