# Helm AI Environment Configuration Template
# Copy this file to .env and update the values for your environment

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
ENVIRONMENT=development
DEBUG=false
SECRET_KEY=your-secret-key-here-change-this-in-production
LOG_LEVEL=INFO

# =============================================================================
# DATABASE SETTINGS
# =============================================================================
# PostgreSQL Database URL
DATABASE_URL=postgresql://helm_user:helm_password@localhost:5432/helm_ai

# Alternative SQLite for development
# DATABASE_URL=sqlite:///./helm_ai.db

# Database pool settings
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# =============================================================================
# REDIS SETTINGS
# =============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_DB=0

# =============================================================================
# AWS SETTINGS
# =============================================================================
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET=helm-ai-storage

# =============================================================================
# EMAIL SETTINGS (Mailchimp)
# =============================================================================
MAILCHIMP_API_KEY=your-mailchimp-api-key
MAILCHIMP_LIST_ID=your-mailchimp-list-id
MAILCHIMP_DC=us13
FROM_EMAIL=noreply@helm-ai.com

# =============================================================================
# SLACK INTEGRATION
# =============================================================================
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_SIGNING_SECRET=your-slack-signing-secret
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Rate limiting
ENABLE_RATE_LIMITING=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Input validation
ENABLE_INPUT_VALIDATION=true
MAX_REQUEST_SIZE=10485760  # 10MB

# Request logging
ENABLE_REQUEST_LOGGING=true
REQUEST_LOG_BODY_SIZE=1024

# Security headers
ENABLE_SECURITY_HEADERS=true
CORS_ORIGINS=http://localhost:3000,https://helm-ai.com

# JWT settings
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=86400

# =============================================================================
# MONITORING SETTINGS
# =============================================================================
# Health checks
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# Metrics
ENABLE_METRICS=true
METRICS_PORT=9090

# Performance monitoring
ENABLE_PERFORMANCE_MONITORING=true
SLOW_QUERY_THRESHOLD=1000

# =============================================================================
# FILE STORAGE SETTINGS
# =============================================================================
UPLOAD_FOLDER=./uploads
MAX_UPLOAD_SIZE=10485760  # 10MB
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf,doc,docx,txt

# =============================================================================
# API SETTINGS
# =============================================================================
API_VERSION=v1
API_PREFIX=/api
API_DOCS_URL=/docs

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Development server
DEV_SERVER_HOST=0.0.0.0
DEV_SERVER_PORT=8000
DEV_SERVER_RELOAD=true

# Testing
TEST_DATABASE_URL=sqlite:///:memory:
TEST_REDIS_URL=redis://localhost:6379/1
TESTING=true

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================
# Production server
PRODUCTION_HOST=0.0.0.0
PRODUCTION_PORT=8000
PRODUCTION_WORKERS=4

# SSL
SSL_CERT_PATH=/etc/ssl/cert.pem
SSL_KEY_PATH=/etc/ssl/key.pem

# =============================================================================
# LOGGING SETTINGS
# =============================================================================
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_DATE_FORMAT=%Y-%m-%d %H:%M:%S
LOG_FILE=./logs/helm-ai.log
LOG_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5

# =============================================================================
# BACKUP SETTINGS
# =============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=./backups

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable features
ENABLE_ANALYTICS=true
ENABLE_AUDIT_LOGGING=true
ENABLE_SECURITY_EVENTS=true
ENABLE_GAME_SESSIONS=true
ENABLE_API_USAGE_LOGGING=true

# Beta features
ENABLE_BETA_FEATURES=false
ENABLE_EXPERIMENTAL_FEATURES=false

# =============================================================================
# THIRD-PARTY INTEGRATIONS
# =============================================================================
# Google Analytics
GOOGLE_ANALYTICS_ID=GA-TRACKING-ID

# Sentry error reporting
SENTRY_DSN=your-sentry-dsn

# Datadog monitoring
DATADOG_API_KEY=your-datadog-api-key
DATADOG_APP_KEY=your-datadog-app-key

# =============================================================================
# BUSINESS SETTINGS
# =============================================================================
# Subscription plans
FREE_PLAN_REQUESTS=1000
PRO_PLAN_REQUESTS=10000
ENTERPRISE_PLAN_REQUESTS=100000

# Rate limits per plan
FREE_PLAN_RATE_LIMIT=10
PRO_PLAN_RATE_LIMIT=100
ENTERPRISE_PLAN_RATE_LIMIT=1000

# =============================================================================
# COMPLIANCE SETTINGS
# =============================================================================
# GDPR compliance
GDPR_COMPLIANCE=true
DATA_RETENTION_DAYS=2555  # 7 years
COOKIE_CONSENT_REQUIRED=true

# SOC2 compliance
SOC2_COMPLIANCE=true
AUDIT_LOG_RETENTION_DAYS=2555

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
# Connection timeouts
DATABASE_TIMEOUT=30
REDIS_TIMEOUT=5
API_TIMEOUT=30

# Caching
CACHE_TYPE=redis
CACHE_DEFAULT_TIMEOUT=300
CACHE_KEY_PREFIX=helm_ai

# Session management
SESSION_TYPE=redis
SESSION_PERMANENT=true
SESSION_TIMEOUT=3600

# External API Configuration (for fallback during development)
EXTERNAL_LLM_API_KEY=your-external-llm-api-key
EXTERNAL_LLM_BASE_URL=https://api.external-llm.com

# Poker Game Integration
POKER_GAME_URL=http://localhost:8080
POKER_GAME_API_KEY=helm-poker-integration-key

# AI Model Configuration
MAX_TOKEN_LIMIT=100000
MODEL_TEMPERATURE=0.7
SAFETY_THRESHOLD=0.95

# Performance Configuration
REQUEST_TIMEOUT=30000
MAX_CONCURRENT_REQUESTS=100
CACHE_TTL=3600

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30000

# Development Configuration
ENABLE_CORS=true
ENABLE_DEBUG_LOGGING=true
ENABLE_HOT_RELOAD=true
